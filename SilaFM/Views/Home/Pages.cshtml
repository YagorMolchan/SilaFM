@model object

@{
    ViewBag.Title = "Страницемер. Определить количество страниц";
    Layout = "_Layout";
}
@section Scripts {
    <script src="~/site/js/pagemer.js"></script>
}
<div class="miniblock">
    <div class="serij">
        <h3>Страницемер</h3>
    </div>
    <div class="row hronodiv">
        <div class="col-md-4"> <img src="~/site/img/stranicemer.png" alt="страницемер" class="img-responsive"> </div>
        <div class="col-md-8">
            <div class="row">
                <h3>Определение количества страниц текста</h3>
                <hr>
            </div>
            <div class="row">
                <form name="frmStranicemer" class="form-group">
                    <div class="radio">
                        <label><input type="radio" id="iFunctionType" name="iFunctionType" value="2" onclick="activeTimeField()"> Известен хронометраж </label>
                        <label><input type="radio" id="iFunctionType" name="iFunctionType" value="1" onclick="activeTimeField()" checked> Известен текст </label>
                    </div>
                    <fieldset>
                        <div class="form-inline">
                            <div class="input-group">
                                <div class="input-group-addon"><span class="glyphicon glyphicon-hourglass" aria-hidden="true"></span></div>
                                <input type="number" min="0" max="24" id="iKoefH" disabled="disabled">
                                <div class="input-group-addon">час</div>
                                <input type="number" min="0" max="60" id="iKoefM" disabled="disabled">
                                <div class="input-group-addon">мин</div>
                                <input type="number" min="0" max="60" id="iKoefS" disabled="disabled">
                                <div class="input-group-addon">сек</div>
                            </div>
                        </div>
                    </fieldset>
                    <fieldset>
                        <div class="form-group form-inline pull-left">
                            <select class="form-control" name="selFont">
                                <option value="1" selected="">Times New Roman</option>
                                <option value="2">Arial</option>
                                <option value="3">Courier New</option>
                            </select>
                            <select class="form-control" name="selFontSize">
                                <option value="1">12</option>
                                <option value="2" selected="">14</option>
                                <option value="3">18</option>
                            </select>
                        </div>
                        <div class="btn-group pull-right form-group">
                            <button type="button" class="btn btn-primary" id="hmrback"><i class="glyphicon glyphicon-chevron-left"></i></button>
                            <button type="button" class="btn btn-primary" id="hmrforward"><i class="glyphicon glyphicon-chevron-right"></i></button>
                        </div>
                        <textarea class="form-control" rows="10" id="tText" name="tText"></textarea>
                    </fieldset>
                    <br>
                    <button type="button" onclick="CalculateText('1')" class="btn btn-success btn-lg">Определить страницы <span class="glyphicon glyphicon-dashboard" aria-hidden="true"></span></button>
                    <button class="btn btn-primary btn-sm pull-right" onclick="document.getElementById('tText').value='';"> <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Очистить</button>
                </form>
            </div>
        </div>
    </div>
    <div class="row hronodiv">
        <div class="col-md-12">
            <p class="pull-right">Проверить правописание: <a href="http://www.gramota.ru/" target="_blank" class="btn btn-primary btn-sm active" role="button">RU</a> <a href="http://lcorp.ulif.org.ua/dictua/" target="_blank" class="btn btn-primary btn-sm active" role="button">UA</a> <a href="http://dictionary.cambridge.org/" target="_blank" class="btn btn-primary btn-sm active" role="button">EN</a> </p>
        </div>
    </div>
    <div class="row hronodiv">
        <h4><span id="pagescntlbl">В тексте приблизительно:</span> <span id="pagescnt"></span> <span id="pagesfont"></span></h4>
    </div>
    <div>
    </div>
</div>
