@model Pras.Web.Models.Forms.IdentifyVoiceViewModel

@{
    ViewBag.Title = "Опознать голос";
    Layout = "_Layout";
}

<div class="miniblock">
    <div class="serij">
        <h1>Опознать голос</h1>
        <img src="~/site/img/identify-01.png" alt="Опознать голос" class="centr">
    </div>

    <div class="insideblock">

        <p class="basictext">
            Мы можем опознать диктора, который вас заинтересовал. Для этого загрузите ролик, либо укажите ссылку на ресурс с ним.
        </p>
        <h2 class="headliner">Форма опознания диктора</h2>
        <br>
        <form action="identify-voice" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            @if (TempData["ErrorChoice"] != null)
            {
                <p class="field-validation-error">@TempData["ErrorChoice"]</p>
            }
            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon" id="choice1"><i class="fa fa-envelope"></i></span>
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Введите Ваш e-mail" })
                </div>
                @Html.ValidationMessageFor(model => model.Email)
            </div>
            <br>
            <div class="input-group">
                <span class="input-group-btn">
                    <span class="btn btn-primary btn-file">
                        Обзор&hellip; @Html.TextBoxFor(model => model.File, new { @type = "file", title = "Выберите файл" })
                    </span>
                </span>
                <input type="text" class="form-control" placeholder="Прикрепите файл" readonly>
            </div>
            <div class="form-group">
                <label for="comment">
                    <h5>Либо скопируйте сюда ссылку на ролик:</h5>
                </label>
                @Html.TextAreaFor(model => model.Link, new { @class = "form-control", rows = 5 })
                @Html.ValidationMessageFor(model => model.Link)
            </div>
            <div class="form-group">
                <label for="comment">
                    <h5>Оставьте ваши коментарии (тайминг, например):</h5>
                </label>
                @Html.TextAreaFor(model => model.Comment, new { @class = "form-control", rows = 5 })
                @Html.ValidationMessageFor(model => model.Comment)
            </div>
            <button class="anketa_btn" tpe="submit">Отправить</button>
        </form>
    </div>
</div>
