                </svg>
            </button>
        </form>
    </div>
    <svg class="contactpage-sila" width="161" height="528">
        <use href="#sila"></use>
    </svg>


</section>
<section class="services">
    @Html.Partial("_FloatingPanel")
</section>
<section class="base-speakers">
    @await Component.InvokeAsync("SidebarContent")
    <div class="our-team">
        <div class="team-element">
            <hr class="hr-for-slider">
        </div>
        <p class="txt-our-team">НАША КОМАНДА</p>

        <div class="team-container">
            <div class="box-photo">
                @{
                    var i = 1;
                    foreach (var item in Model)
                    {
                        <div onclick="person1()" id="person@(i)" class="size-photo photo-employ@(i)" style="background: url('@item.ImageSmall')" data-img="@item.Image"></div>
                        i++;
                    }
                }
            </div>
            <div class="box-info">
                @{
                    i = 0;
                    foreach (var item in Model)
                    {
                        <div id="change-info@(i+1)" @(i==0?"style=display:block;":"")>
                            <h4 class="name-person">@item.Name</h4>
                            <p class="work-person">@item.Position</p>
                            <hr class="hr-for-slider">
                            <span class="svg-contacts">
                                <svg class="contact-person" width="21" height="19" viewBox="0 0 21 19"
                                     fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M21 2.98869C20.2191 3.33125 19.3869 3.55831 18.5194 3.66856C19.4119 3.13569 20.0931 2.29831 20.4133 1.289C19.5812 1.78512 18.6624 2.13556 17.6833 2.33113C16.8932 1.48981 15.7671 0.96875 14.5386 0.96875C12.1551 0.96875 10.2362 2.90338 10.2362 5.27506C10.2362 5.61631 10.2651 5.94444 10.3359 6.25681C6.75675 6.08225 3.58969 4.36681 1.46212 1.75363C1.09069 2.39806 0.872813 3.13569 0.872813 3.92975C0.872813 5.42075 1.64062 6.74244 2.78513 7.50762C2.09344 7.4945 1.41488 7.29369 0.84 6.97738C0.84 6.9905 0.84 7.00756 0.84 7.02462C0.84 9.11675 2.33231 10.8545 4.28925 11.2548C3.93881 11.3506 3.55687 11.3966 3.1605 11.3966C2.88488 11.3966 2.60662 11.3808 2.34544 11.3231C2.90325 13.028 4.48613 14.2814 6.36825 14.3221C4.9035 15.4679 3.04369 16.1583 1.03031 16.1583C0.67725 16.1583 0.338625 16.1426 0 16.0992C1.90706 17.3291 4.16719 18.0312 6.6045 18.0312C14.5267 18.0312 18.858 11.4688 18.858 5.78038C18.858 5.59006 18.8514 5.40631 18.8423 5.22388C19.6967 4.6175 20.4146 3.86019 21 2.98869Z"
