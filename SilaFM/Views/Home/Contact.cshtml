        <script src="//unpkg.com/swiper/swiper-bundle.min.js"></script>
    }
    @section Scripts{
        <script src="~/site2/js/contact.js"></script>
    }
    <section id="1" class="home-page" style="height: 977px;">
        <div class="home-box-text">
            <p class="sila-fm-txt">СИЛА FM</p>
            <h2 class="professional-txt">КОНТАКТЫ</h2>
            <p class="txt-production txt-office">
                Офис Sila FM есть в двух странах, выберите оптимальный вариант для
                сотрудничества
            </p>
            <a href="https://www.google.com.ua/maps/place/%D0%A1%D0%B8%D0%BB%D0%B0.%D0%A4%D0%9C/@@50.4423881,30.5281876,17z/data=!3m1!4b1!4m5!3m4!1s0x40d4cf776a2cf3a1:0x13c554e376dcc4fe!8m2!3d50.4423881!4d30.5303763?"
               class="contact-btn">
                ОТКРЫТЬ GOOGLE КАРТУ
                <svg class="icon-btn-triangle btn-svg">
                    <use xlink:href="#icon-triangle"></use>
                </svg>
            </a>
        </div>
        <img class="contactpage-sila" src="~/site2/img/icons/sila2.svg" alt="sila">
    </section>
    <section class="services">
        @Html.Partial("_FloatingPanel")
    </section>
    <section class="base-speakers">
        @await Component.InvokeAsync("SidebarContent")
        <div class="our-team">
            <div class="team-element">
                <hr class="hr-for-slider">
            </div>
            <p class="txt-our-team">НАША КОМАНДА</p>


            <div class="sliders-container">
                <div class="right-slider" style="display: inline-block;">
                    @{
                        foreach (var item in Model)
                        {
                            <div class="right-slide-item">
                                <img src="@item.ImageSmall" alt="@item.Name" class="photo-grey">
                                <img src="@item.Image" alt="@item.Name" class="photo-color">
                            </div>
                        }
                    }
                </div>

                <div class="image-slider swiper-container" style="width: 40%; float: right; margin-top: 30px;">
                    <div class="image-slider__wrapper swiper-wrapper">
                        @foreach (var item in Model)
                        {
                            <div class="image-slider__slide swiper-slide">
                                <h3 class="slider-swiper-title">@item.Name</h3>
                                <p class="slider-swiper-subtitle">@item.Position</p>
                                <hr class="swiper-line"><br>
                                <div class="swiper-socials">
                                    @foreach (var soc in item.SocialsList)
                                    {
                                        <a href="@soc.Link" target="_blank">
                                            <img src="~/site2/img/icons/@(soc.Type.ToString().ToLower()).svg" style="width: 21px; height: 21px" alt="" class="swiper-social-item">
                                        </a>
                                    }
                                </div>
                                <p class="swiper-text">
                                    @item.Summary
                                </p>
                            </div>
                        }
                    </div>

                    <img src="~/site2/img/icons/swiperarr-left.svg" class="swiper-button-prev" alt="" style="margin-top: 100px;">
                    <img src="~/site2/img/icons/swiper-right.svg" alt="" class="swiper-button-next" style="margin-top: 100px; margin-right: 514px;">
                </div>
            </div>
        </div>

        <div class="know-cost">
            @Html.Partial("_CalculatorModal", new OrderCallFormModel())
            <h2>ХОТИТЕ УЗНАТЬ СТОИМОСТЬ?</h2>
            <p class="txt-we-connect">Оставьте заявку и мы с вами свяжемся. Либо, воспользуйтесь онлайн-калькулятором.</p>
            <img class="wave-img" src="~/site2/img/wave.png" alt="wave">
            <div class="cost-box">
                @Html.Partial("_Helper", new OrderCallFormModel())
                <div class="cost-img">
                    <p>ONLINE-КАЛЬКУЛЯТОР</p>
                    <img src="~/site2/img/calculator.png" alt="Calculator">
                    <button class="cost-btn-open modal-btn-calculator">
                        ОТКРЫТЬ
                        <svg width="9" height="17" viewBox="0 0 9 17" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M1.73931 2.65887L7.53919 8.62078L1.66678 14.3337L1.73931 2.65887Z" stroke="white" stroke-width="1.5" />
                        </svg>
                    </button>
                </div>
            </div>
        </div>
    </section>
