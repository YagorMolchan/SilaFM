@model SettingsViewModel

@if (Model.FullContactsGroups != null && Model.FullContactsGroups.Any())
{
    <h2>Наши контакты</h2>
    <hr>
    <br>
    foreach (var group in Model.FullContactsGroups)
    {
        <h4>@group.Title</h4>
        foreach (var item in group.Items)
        {
            <div class="row">
                <div class="col-md-3 col-sm-4 col-xs-6">
                    <p class="littext">@item.Label</p>
                </div>
                <div class="col-md-9 col-sm-8 col-xs-6">
                    @if (String.IsNullOrEmpty(item.Link))
                    {
                        <p class="littext">@item.Value</p>
                    }
                    else
                    {
                        <p class="littext"><a href="@item.Link" class="link2">@item.Value</a></p>
                    }
                </div>
            </div>
        }
        <br>
    }
}

@if (Model.ProjectsList != null && Model.ProjectsList.Any())
{
    <h2>Наши проекты</h2>
    <hr>
    foreach (var item in Model.ProjectsList)
    {
        if (String.IsNullOrEmpty(item.Link))
        {
            <p>@item.Value</p>
        }
        else
        {
            <p><a href="@item.Link" class="link2">@item.Value</a></p>
        }
    }
    <br>
}
@if (Model.PartnersList != null && Model.PartnersList.Any())
{
    <h2>Наши партнеры</h2>
    <hr>
    foreach (var item in Model.PartnersList)
    {
        if (String.IsNullOrEmpty(item.Link))
        {
            <p>@item.Value</p>
        }
        else
        {
            <p><a href="@item.Link" class="link2">@item.Value</a></p>
        }
    }
}