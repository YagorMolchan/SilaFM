@using Pras.Web.Models.HelperModels
@model SettingsViewModel
@{
    var socials = (List<SocialContact>)ViewBag.Socials;
}
<div class="footer-element">
    <hr>
    <h5>НАШИ ПРИНЦИПЫ</h5>
    @Html.Raw(Model.Principles)
    <div class="see-more">
        <button onclick="seemore()" id="myBtn">
            ЕЩЕ
        </button>
    </div>
</div>
<div class="footer-element element-items">
    <hr>
    <h5>ГРАФИК РАБОТЫ</h5>
    <p class="text-element">
        @Html.Raw(Model.Shedule)
    </p>
    <hr>
    <h5>КОНТАКТЫ</h5>
    <div class="text-element for-botton-icon">
        @Html.Raw(Model.Contacts)
    </div>
    @if (socials != null)
    {
        <div class="svg-boxes">
            @foreach (var item in socials)
            {
                <a href="@item.Link" target="_blank">
                    <svg class="icon-soc icon-soc-@item.Type.ToString().ToLower()">
                        <use href="#icon-@item.Type.ToString().ToLower()"></use>
                    </svg>
                </a>
            }
        </div>
    }
</div>
<div class="footer-element">
    <hr>
    <h5>ПОЧТОВЫЙ АДРЕС</h5>
    <p>
        @Html.Raw(Model.Address)
    </p>
    <hr>
    <h5>СОТРУДНИЧЕСТВО</h5>
    <p>@Html.Raw(Model.Partnership)</p>
    <button class="footer-btn">
        ЗАПОЛНИТЬ АНКЕТУ<svg width="11" height="17" viewBox="0 0 11 17" fill="none"
                             xmlns="http://www.w3.org/2000/svg">
            <path d="M2.73931 2.65887L8.53919 8.62078L2.66678 14.3337L2.73931 2.65887Z" stroke="white"
                  stroke-width="1.5" />
        </svg>
    </button>
</div>





