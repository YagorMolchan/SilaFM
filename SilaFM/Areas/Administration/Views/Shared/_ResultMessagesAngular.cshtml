<div class="alert {{message.Class}} alert-dismissable angular" data-ng-show="message" data-ng-model="message">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
    <h4><i class="fa {{message.Icon}}"></i> <b data-ng-bind="message.Title"></b></h4>
    <p data-ng-bind="message.Text"></p>
</div>