@model IEnumerable<Pras.Web.Areas.Administration.Models.CharacterViewModels.CharacterViewModel>

@{
    ViewBag.Title = "Персонажи";
    Layout = "_Layout";
}

<div class="col-sm-12 col-md-7 col-lg-9">
    <div class="box box-danger">
        <div class="box-header">
            <h3 class="box-title">
                <a href="@Url.Action("Edit", "Characters")" class="btn btn-danger btn-lg"><i class="fa fa-plus-circle"></i> Добавить персонажа</a>
            </h3>
        </div>
    </div>
    <div class="box-body table-responsive">
        <table class="table table-bordered table-hover table-actions" data-order='[[ 0, "desc" ]]'>
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SpeakerName)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SpeakerName)
                        </td>
                        <td>
                            <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-danger"><i class="fa fa-edit"></i></a>
                        </td>
                        <td>
                            <a href="#" class="btn btn-default" data-toggle="modal" data-target="#myModal_@item.Id">
                               <i class="fa fa-remove"></i>
                            </a>
                        </td>
                        @Html.Partial("_DeleteDialog", item)
                    </tr>
                }                
            </tbody>
        </table>
    </div>
</div>
